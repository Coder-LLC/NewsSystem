<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>user_login_control</servlet-name>
    <servlet-class>Servlet.user_login_control</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>admin_editcomment_control</servlet-name>
    <servlet-class>Servlet.admin_editcomment_control</servlet-class>
  </servlet>


  <servlet-mapping>
    <servlet-name>user_login_control</servlet-name>
    <url-pattern>/servlet/user_login_control</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>admin_editcomment_control</servlet-name>
    <url-pattern>/servlet/admin_editcomment_control</url-pattern>
  </servlet-mapping>

</web-app>